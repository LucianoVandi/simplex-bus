{
  "name": "@lucianovandi/simplex-bus",
  "version": "1.0.0",
  "description": "A transport-agnostic command bus for safe cross-context messaging.",
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": "./index.js"
  },
  "types": "./index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "src/"
  ],
  "scripts": {
    "test": "node --test",
    "coverage": "node --test --experimental-test-coverage",
    "check:coverage": "node scripts/check-coverage.mjs",
    "typecheck": "node scripts/check-type-contracts.mjs",
    "audit:high": "node scripts/run-audit.mjs",
    "lint": "eslint . --max-warnings=0 && node --check index.js src/*.js src/internal/*.js test/*.js fixtures/helpers/*.js scripts/*.mjs examples/*.js examples/e2e/*.mjs",
    "demo:e2e": "node examples/e2e/local-bridge-demo.mjs",
    "demo:e2e:ajv": "node examples/e2e/local-bridge-demo-ajv.mjs",
    "benchmark:smoke": "node scripts/benchmark-smoke.mjs",
    "pack:check": "npm pack --dry-run --cache ./.npm-cache",
    "check": "npm run lint && npm run test && npm run check:coverage && npm run pack:check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LucianoVandi/simplex-bus.git"
  },
  "keywords": [
    "command-bus",
    "message-bus",
    "webview",
    "iframe",
    "postmessage",
    "rpc"
  ],
  "author": "Luciano Vandi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LucianoVandi/simplex-bus/issues"
  },
  "homepage": "https://github.com/LucianoVandi/simplex-bus#readme",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  }
}
